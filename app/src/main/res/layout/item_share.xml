<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/share"
    style="@style/EditItem.LinearLayoutRipple"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_margin="@dimen/margin_small"
        android:id="@+id/share_icon"
        android:layout_width="@dimen/share_image_side"
        android:layout_height="@dimen/share_image_side"
        app:shapeAppearanceOverlay="@style/ImageViewRound"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/elevation_large"
        tools:src="@drawable/ic_share" />

</LinearLayout>